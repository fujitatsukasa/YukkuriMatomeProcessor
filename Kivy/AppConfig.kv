# AppConfig.kv
<AppConfig>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 15

                # 既存のショートカット設定セクション
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    spacing: 10

                    Label:
                        text: "ショートカットの変更[β版]"
                        size_hint_x: 0.6
                        font_size: '22sp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                    Button:
                        text: "変更"
                        size_hint_x: 0.1
                        font_size: '22sp'
                        on_release:
                            app.root.ids.screen_manager.current = 'ショートカット変更'

                # 既存のショートカット設定セクション
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    spacing: 10

                    Label:
                        text: "動画出力時の動作キーの変更(変更非推奨)"
                        size_hint_x: 0.6
                        font_size: '22sp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                    Button:
                        text: "変更"
                        size_hint_x: 0.1
                        font_size: '22sp'
                        on_release:
                            app.root.ids.screen_manager.current = '動画出力時の動作キーの変更'

                # 新規追加: ファーストログイン
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    spacing: 10

                    Label:
                        text: "初回ログイン日時:"
                        size_hint_x: 0.4
                        font_size: '22sp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                    Label:
                        id: first_login_label
                        text: root.first_login
                        size_hint_x: 0.6
                        font_size: '22sp'
                        halign: 'right'
                        valign: 'middle'
                        text_size: self.size

                # 新規追加: トライアルエンド
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    spacing: 10

                    Label:
                        text: "トライアル終了日時:"
                        size_hint_x: 0.4
                        font_size: '22sp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                    Label:
                        id: trial_end_label
                        text: root.trial_end
                        size_hint_x: 0.6
                        font_size: '22sp'
                        halign: 'right'
                        valign: 'middle'
                        text_size: self.size

                # 新規追加: メンバーシップステータス
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    spacing: 10

                    Label:
                        text: "メンバーシップステータス:"
                        size_hint_x: 0.4
                        font_size: '22sp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                    Label:
                        id: membership_status_label
                        text: root.membership_status
                        size_hint_x: 0.6
                        font_size: '22sp'
                        halign: 'right'
                        valign: 'middle'
                        text_size: self.size

                # 新規追加: 推奨YMM4バージョン
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    spacing: 10

                    Label:
                        text: "推奨YMM4バージョン:"
                        size_hint_x: 0.4
                        font_size: '22sp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                    Label:
                        id: recommended_version_label
                        text: root.recommended_ymm4_version
                        size_hint_x: 0.6
                        font_size: '22sp'
                        halign: 'right'
                        valign: 'middle'
                        text_size: self.size

                # 新規追加: 現在のYMM4バージョン
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    spacing: 10

                    Label:
                        text: "現在のYMM4バージョン:"
                        size_hint_x: 0.4
                        font_size: '22sp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                    Label:
                        id: current_version_label
                        text: root.current_ymm4_version
                        size_hint_x: 0.6
                        font_size: '22sp'
                        halign: 'right'
                        valign: 'middle'
                        text_size: self.size
